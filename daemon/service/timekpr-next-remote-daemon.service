[Unit]
Description=timekpr-next remote daemon service
Documentation=file:/etc/timekpr-remote/timekpr-remote.conf
After=timekpr.service

[Service]
Type=simple
User=root
WorkingDirectory=/usr/lib/python3/dist-packages/timekpr/
ExecStart=/usr/bin/timekpr-remote-daemon
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
